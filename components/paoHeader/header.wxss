/* components/header/header.wxss */
@import '../../weui/common.wxss';

.nav {
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  background-color: var(--content_bg);
  display: flex;
  align-items: center;
  /* margin-bottom: 26rpx; */
}


.search{
  display: flex;
  align-items: center;
  justify-content: start;
  width: 480rpx;
  height: 72rpx;
  background-color: #F8F8F8;
  border-radius: 36px;
  margin-left: 36rpx;
}

.search .l {
  width: 133rpx;
  position: relative;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 26rpx;
  font-weight: 500;
  color: #212A3D;
}
.search text{
  font-size: 26rpx;
  font-weight: 500;
  color: #212A3D;
  margin-left: 12rpx;
}

.search .l::before{
  content: '';
  position: absolute;
  width: 2px;
  height: 40rpx;
  background-color: #D9D9D9;
  /* right: 10rpx; */
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.r{
  flex: 1;
  text-align: center;
  font-weight: 400;
  color: #959CA7;
  font-size: 28rpx;
  letter-spacing: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.r view{
  margin-left: 11rpx;
}

/* 搜索页面 */
.search_wrapper {
  font-size: 28rpx;
  font-weight: 400;
  color: #959CA7;
  /* margin-left: 36rpx; */
  padding-left: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* position: relative; */
}
.search_wrapper.title_wrapper {
  flex: 1;
  position: relative;
  justify-content: start;
}
.search_wrapper text{
  font-size: 28rpx;
  font-weight: 400;
  color: #959CA7;
  margin-right: 11rpx;
}
.search_wrapper .iconarrow-back-outline{
  font-size: 40rpx;
  margin-right: 20rpx;
}
.search_wrapper .search_box{
  display: flex;
  justify-content: start;
  align-items: center;
  width: 428rpx;
  height: 72rpx;
  background: #F4F4F4;
  border-radius: 36rpx;
  position: relative;
}

.search_wrapper .search_box text{
  margin-left: 24rpx;
}

.close{
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.title {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}

.bg {
  background-color: transparent;
}

@import '../../assets/iconfont/iconfont.wxss';
