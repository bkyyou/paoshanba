/* pages/publish/publish.wxss */
input.common_title_1 {
  /* color: var(--color_subtext); */
  font-weight: 400;
}
.placeholder_title {
  color: var(--color_subtext);
  font-weight: 400;
}

.placeholder_textarea {
  font-weight: 400;
  color: #959CA7;
}


.publish_container {
  width: 100%;
  height: 100%;
}

.publish_wrapper {
  padding-top: 38rpx;
}

.upload_box {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 48rpx;
}
.upload_box text{
  color: #959CA7;
}

textarea {
  line-height: 40rpx;
}

.publish_wrapper .upload_btn {
  width: 152rpx;
  height: 152rpx;
  background-color: #FFFFFF;
  border: 2px solid #D9D9D9;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
}

.title {
  width: 100%;
  padding-bottom: 30rpx;
  border-bottom: 1px solid var(--line_bg);
  margin-bottom: 30rpx;
}

.item_info {
  width: 750rpx;
  height: 108rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #FFFFFF;
  border-top: 1px solid var(--line_bg);
  box-sizing: border-box;
}

.item_info .r {
  width: 120rpx;
  height: 60rpx;
  background-color: #2A82FA;
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  color: #FFFFFF;
}

.item_info .l {
  display: flex;
  align-items: center;
}

.item_info .list {
  display: flex;
  align-items: center;
  margin-right: 37rpx;
}

.item_info .list view:last-child {
  margin-left: 10rpx;
}
