/* pages/publishPath/publishPath.wxss */

.publish_path_wrapper {
  padding-top: 38rpx;
}

.loc_list {
  /* padding-bottom: 36rpx; */
  /* margin-bottom: 72rpx; */
  margin-bottom: 36rpx;
  position: relative;
  padding-left: 95rpx;
  /* padding-left: 46rpx; */
}

.loc_list text {
  color: 26rpx;
  color: #D9D9D9;
}

.loc_des {
  color: #686E7A;
}

.sign_txt {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  color: #ffffff;
  text-align: center;
  /* line-height: 28rpx; */
  position: absolute;
  left: -38rpx;
  /* top: 14rpx; */
  top: 50%;
  transform: translateY(-50%);
}

.start {
  background-color: #02D158;
}

.pass_by {
  background-color: var(--color_main_decorate);
}

.end {
  background-color: #FF6555;
}

.delete {
  left: -94rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}


.loc_wrapper {
  padding-bottom: 36rpx;
  border-bottom: 1px solid var(--line_bg);
}

.loc_box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  flex-wrap: wrap;
}

.coordinate {
  display: flex;
  align-items: center;
  line-height: 28rpx;
}

.coordinate text {
  margin-right: 10rpx;
}

.remark, .add {
  width: 100%;
}

.remark {
  margin-bottom: 36rpx;
}

.add {
  text-align: right;
}

.add text {
  color: var(--color_main_decorate);
  font-size: 30rpx;
}