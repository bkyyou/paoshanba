.sign {
  padding: 0 18rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background: #F4F4F4;
  border-radius: 30rpx;
}

.acitve {
  color: #ffffff;
  background-color: #2A82FA;
}

.signs_wrapper {
  padding-top: 38rpx;
}

.signs_header {
  padding-bottom: 36rpx;
  border-bottom: 1px solid var(--line_bg);
  margin-bottom: 36rpx;
}

.signs_header text {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.signs_title {
  margin-bottom: 20rpx;
}

.custom_tag {
  /* display: flex;
  align-items: center; */
  width: 194rpx;
  /* height: 60rpx; */
  box-sizing: border-box;
}


.choose_sign {
  margin-bottom: 20rpx;
}

.all_signs_box {
  margin-bottom: 26rpx;
 
}
.all_signs {
  display: flex;
  flex-wrap: wrap;
}

/* 编辑小队名称 */
.edit_team_name_box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
}


.edit_team_name_wrapper {
  width: 540rpx;
  /* height: 295rpx; */
  background-color: #cccccc;
  border-radius: 24rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  padding-top: 43rpx;
}

.edit_team_name_title{
  margin-bottom: 50rpx;
  text-align: center;
}

.edit_team_name_wrapper input {
  width: 480rpx;
  height: 50rpx;
  /* margin-bottom: 24rpx; */
  margin: 0 auto 24rpx;
  border-radius: 10rpx;
  border: 1px solid var(--line_bg);
  padding: 5rpx;
}

.btn_box {
  height: 80rpx;
  border-top: 1px solid var(--line_bg);
  display: flex;
  line-height: 80rpx;
  color: rgba(42, 130, 250, 1);
}

.btn_box view {
  flex: 1;
  text-align: center;
}
.btn_box view:first-child {
  border-right: 1px solid var(--line_bg);
}