/* pages/personalHomepage/personalHomepage.wxss */

.personal_homepage_wrapper {
  position: fixed;
  left: 0;
  top: 0;
}

.personal_homepage_bg {
  width: 750rpx;
  height: 405rpx;
}

.personal_homepage_content {
  transform: translateY(-50rpx);
  background-color: #ffffff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  position: relative;
  padding-top: 20rpx;
}

.avator_box {
  width: 152rpx;
  height: 152rpx;
  border-radius: 50%;
  /* border: 2px solid #ffffff; */
  overflow: hidden;
  border-radius: 50%;
  border: 2px solid #ffffff;
  position: absolute;
  left: 80rpx;
  top: -76rpx;
}

.avator_box image {
  width: 152rpx;
  height: 152rpx;
  /* border-radius: 50%;
  border: 2px solid #ffffff;
  position: absolute;
  left: 80rpx;
  top: -76rpx; */
}

.personal_homepage_header {
  /* display: flex; */
  /* justify-content: flex-end; */
  padding-bottom: 26rpx;
}

.ability {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 18rpx;
}

.abi {
  padding-left:  40rpx;
  padding-right:  40rpx;
  border-radius: 32rpx;
  color: #FFFFFF;
  display: flex;
  font-size: 26rpx;
  height: 64rpx;
  line-height: 64rpx;
}

.att {
  background-color: #FE2C55;
  margin-right: 24rpx;
}

.communi {
  background-color: #2A82FA;
}

.abi text {
  margin-right: 10rpx;
  font-size: 26rpx;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  color: #212A3D;
  margin-bottom: 23rpx;
}

.authentication {
  margin-bottom: 22rpx;
  display: flex;
  align-items: center;
  line-height: 22rpx;
}
.authentication text{
  margin-right: 6rpx;
  color: #ECAE66;
  font-size: 22rpx;
}
.authent_info {
  font-size: 22rpx;
  font-weight: 400;
  color: #686E7A;
}

.sign {
  font-weight: 400;
  color: #212A3D;
  margin-bottom: 36rpx;
}

.num {
  display: flex;
  align-items: center;
}

.num > view {
  display: flex;
  align-items: flex-end;
  margin-right: 36rpx;
}

.num > view view:first-child {
  font-size: 44rpx;
  font-weight: bold;
  color: #2A82FA;
  line-height: 44rpx;
  margin-right: 8rpx;
}
.num > view view:last-child {
  font-size: 26rpx;
  font-weight: 400;
  color: #686E7A;
}

.line {
  width: 750rpx;
  height: 16rpx;
  background-color: var(--line_bg);
}
