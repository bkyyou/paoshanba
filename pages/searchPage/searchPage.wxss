.acitivity_content_list_header .nickname {
  font-size: 30rpx;
  font-weight: 500;
  color: #212A3D;
}
.acitivity_content_list_header .motorcycle_type{
  font-size: 16rpx;
  font-weight: 400;
  color: #686E7A;
}
.acitivity_content_list_header .iconrenzheng{
  font-size: 16rpx;
  font-weight: 400;
  color: #ECAE66;
}

.acitivity_content_list_header .time {
  font-size: 24rpx;
  font-weight: 400;
  color: #686E7A;
  position: absolute;
  right: 0;
  top: 11rpx;
}

.search_page_nav{
  padding: 0 153rpx;
  display: flex;
  justify-content: space-between;
  font-size: 36rpx;
  color: #212A3D;
  border-bottom: 2px solid #F4F4F4;
  margin-bottom: 24rpx;
}

.search_page_nav .active {
  font-weight: bold;
}
.search_page_nav .active::before {
  content: '';
  width: 72rpx;
  height: 8rpx;
  background-color: #2A82FA;
  border-radius: 4rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.search_page_nav view {
  padding-bottom: 15rpx;
  position: relative;
}

/* 用户 */
.all_users .user_list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 1px solid var(--line_bg);
  margin-bottom: 24rpx;
}
.user_list .user_des_box {
  display: flex;
  align-items: center;
}
.user_list .user_des_box .avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: skyblue;
  margin-right: 20rpx;
}
.user_list .user_des_box .user_des view {
  margin-bottom: 16rpx;
}
.user_list .user_des_box .user_des .fans_count {
  margin-bottom: 10rpx;
}

.user_list .attention_status{
  width: 108rpx;
  height: 48rpx;
  border-radius: 24rpx;
  color: #ffffff;
  text-align: center;
  line-height: 48rpx;
}
.hasAttention {
  background-color: #F26D7D;
}
.noAttention {
  background-color: #959CA7;
}

