/* pages/signUpList/signUpList.wxss */
.sign_up_list_container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.sign_up_list_wrapper {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.sign_up_list_header {
  border-bottom: 1px solid var(--line_bg);
  display: flex;
  justify-content: space-around;
  width: 100%;
  color: #686E7A;
}

.sign_up_list_header view {
  position: relative;
  padding-bottom: 16rpx;
}

.sign_up_list_header .active {
  color: #212A3D;
  font-weight: bold;
}

.sign_up_list_header .active::before {
  content: "";
  position: absolute;
  width: 72rpx;
  height: 8rpx;
  background-color: #2A82FA;
  border-radius: 4rpx;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
}

.sign_up_list_content {
  padding-top: 30rpx;
  flex: 1;
  overflow-y: auto;
}

/* 每个人 */
.item {
  display: flex;
  /* width: 100%; */
  padding-bottom: 20rpx;
  border-bottom: 1px solid var(--line_bg);
  margin-bottom: 24rpx;
}

.item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.r {
  flex: 1;
}

.item .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.phone {
  margin-bottom: 16rpx;
  color: #686E7A;
}

.des {
  margin-bottom: 20rpx;
}

.ability_box {
  display: flex;
}
.ability_box view{
  width: 100rpx;
  height: 60rpx;
  background-color: #2A82FA;
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
}
.ability_box view:first-child{
  margin-right: 24rpx;
  color: #fff;
}
.ability_box view:last-child{
  color: #212A3D;
  background-color: #F4F4F4;
}