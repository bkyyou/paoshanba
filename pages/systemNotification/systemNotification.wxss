.system_notification_container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.system_notification_wrapper {
  padding-top: 38rpx;
  background-color: var(--line_bg);
  flex: 1;
}

.information {
  padding: 30rpx 36rpx;
  background-color: #ffffff;
  margin-bottom: 24rpx;
}

.information_header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.time {
  font-size: 22rpx;
  font-weight: 400;
  color: #686E7A;
}

