.acitivity_signs{
  display: flex;
  margin-bottom: 30rpx;
}
.acitivity_signs view {
  /* display: flex; */
  padding: 9rpx 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #2A82FA;
  margin-right: 20rpx;
  background-color: #DDEBFE;
  border-radius: 22rpx;
}
