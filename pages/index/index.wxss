/**index.wxss**/
.content {
  width: 100%;
  margin-top: 26rpx;
  /* background-color: #F8F8F8; */
}

.swiper_container{
  width: 100%;
  background-color: --content_bg;
}
.swiper_container .swiper_1{
  width: 678rpx;
  height: 236rpx;
  border-radius: 20px;
  overflow: hidden;
}
.swiper_container image {
  width: 678rpx;
  height: 236rpx;
}

/* all_activity */
.all_activity {
  margin-top: 24rpx;
  background-color: #f8f8f8;
}
.aciviety_nav{
  /* padding-bottom: 20rpx; */
  border-bottom: 1px solid #F8F8F8;
  display: flex;
  font-size: 32rpx;
  color: #686E7A;
  align-items: baseline;
  background-color: #FFFFFF;
}
.aciviety_nav view {
  margin-right: 36rpx;
  position: relative;
  padding-bottom: 20rpx;
}

.aciviety_nav .active{
  font-size: 36rpx;
  font-weight: bold;
  color: #212A3D;
}

.aciviety_nav .active::before {
  content: '';
  width: 40rpx;
  height: 10rpx;
  background: #2A82FA;
  border-radius: 5rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.acitivity_content_list{
  padding-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  padding-bottom: 32rpx;
}
.acitivity_content_list_header{
  display: flex;
  align-items: center;
  position: relative;
  /* margin-top: 20rpx; */
  margin-bottom: 20rpx;
}

.acitivity_content_list_avatar{
  width: 72rpx;
  height: 72rpx;
  background-color: skyblue;
  border-radius: 50%;
  position: relative;
  margin-right: 20rpx;
}

.sex_sign{
  width: 24rpx;
  height: 24rpx;
  border: 2px solid #FFFFFF;
  position: absolute;
  border-radius: 50%;
  right: -4rpx;
  bottom: -4rpx;
  background-color: #2A82FA;
}

.acitivity_content_list_header .nickname {
  font-size: 30rpx;
  font-weight: 500;
  color: #212A3D;
}
.acitivity_content_list_header .motorcycle_type{
  font-size: 16rpx;
  font-weight: 400;
  color: #686E7A;
}
.acitivity_content_list_header .iconrenzheng{
  font-size: 16rpx;
  font-weight: 400;
  color: #ECAE66;
}

.acitivity_content_list_header .time {
  font-size: 24rpx;
  font-weight: 400;
  color: #686E7A;
  position: absolute;
  right: 0;
  top: 11rpx;
}

.acitivity_content_list_content .acitivity_list_title{
  font-size: 30rpx;
  color: #212A3D;
  font-weight: 500;
  margin-bottom: 15rpx;
}
.acitivity_content_list_content .acitivity_list_des{   
  font-size: 24rpx;
  font-weight: 400;
  color: #686E7A;
  padding-bottom: 20rpx;
  border-bottom: 2px solid #F8F8F8;
  margin-bottom: 20rpx;
}

.acitivity_plan {
  font-size: 26rpx;
  font-weight: 400;
  color: #686E7A;
}
.acitivity_plan .acitivity_plan_item{
  display: flex;
  margin-bottom: 24rpx;
  align-items: center;
}

.acitivity_plan .acitivity_plan_item text{
  font-size: 26rpx;
  font-weight: 400;
  color: #686E7A;
}

.acitivity_plan .acitivity_plan_item view, .acitivity_plan .acitivity_plan_item text{
  margin-right: 16rpx;
}
.acitivity_plan .acitivity_plan_item .distance{
  width: 121rpx;
  height: 30rpx;
  background-color: #FFFFFF;
  border: 2rpx solid #2A82FA;
  border-radius: 15rpx;
  font-size: 18rpx;
  font-weight: 400;
  color: #2A82FA;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.acitivity_plan .acitivity_plan_item .loc{
  font-size: 26rpx;
  font-weight: 500;
  color: #212A3D;
}
.acitivity_pics{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.acitivity_pics image{
  width: 222rpx;
  height: 222rpx;
  border-radius: 6rpx;
}
.acitivity_features {
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  font-weight: 500;
  color: #212A3D;
}
.acitivity_features view{
  display: flex;
  align-items: center;
}
.acitivity_features view text{
  margin-right: 16rpx;
  font-size: 30rpx;
  color: #212A3D;
}
