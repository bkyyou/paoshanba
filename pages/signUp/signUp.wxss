  width: 100%;
  box-sizing: border-box;
}
.des_title {
  position: relative;
  text-align: center;
  margin-bottom: 24rpx;
}
.des_title::before{
  content: '';
  width: 250rpx;
  height: 1px;
  background-color: var(--line_bg);
  position: absolute;
  top: 50%;
  left: 4rpx;
}
.des_title::after{
  content: '';
  width: 250rpx;
  height: 1px;
  background-color: var(--line_bg);
  position: absolute;
  top: 50%;
  right: 4rpx;
}

